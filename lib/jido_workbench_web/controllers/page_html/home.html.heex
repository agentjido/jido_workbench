<.workbench_layout current_page={:home} show_menu={false}>
  <div class="flex flex-col items-center justify-center min-h-screen bg-zinc-900 text-gray-100">
    <.container class="text-center">
      <.h1 class="mb-8 text-4xl font-bold text-lime-500">Welcome to Jido Workbench</.h1>

      <div class="flex flex-col gap-4 w-full max-w-md mx-auto">
        <.button
          link_type="live_redirect"
          to={~p"/jido"}
          class="w-full py-3 text-lg bg-lime-500 hover:bg-lime-600 text-zinc-900"
        >
          <.icon name="hero-chat-bubble-left-ellipsis" solid class="w-6 h-6 m-0.5 mr-2" />
          Chat with Agent Jido
        </.button>

        <.button
          link_type="live_redirect"
          to={~p"/catalog"}
          class="w-full py-3 text-lg bg-lime-500 hover:bg-lime-600 text-zinc-900"
        >
          <.icon name="hero-bolt" solid class="w-6 h-6 m-0.5 mr-2" /> Catalog
        </.button>

        <.button
          link_type="live_redirect"
          to={~p"/demo/basic-task-agent"}
          class="w-full py-3 text-lg bg-lime-500 hover:bg-lime-600 text-zinc-900"
        >
          <.icon name="hero-beaker" solid class="w-6 h-6 m-0.5 mr-2" /> Demos
        </.button>

        <.button
          link_type="live_redirect"
          to={~p"/settings"}
          class="w-full py-3 text-lg bg-lime-500 hover:bg-lime-600 text-zinc-900"
        >
          <.icon name="hero-cog" solid class="w-6 h-6 m-0.5 mr-2" /> Settings
        </.button>
      </div>
    </.container>
  </div>
</.workbench_layout>
