<.marketing_layout current_path={"/#{@type}"}>
  <div class="container max-w-[1200px] mx-auto px-6 py-8">
    <div class="flex gap-8">
      <%!-- Main Content --%>
      <div class="flex-1 min-w-0">
        <%= if @selected_document do %>
          <div class="space-y-8">
            <div class="space-y-4">
              <div class="flex items-center justify-between">
                <div class="space-y-1">
                  <.link
                    navigate={"/#{@type}"}
                    class="text-primary hover:opacity-80 mb-2 flex items-center gap-1 text-sm"
                  >
                    <.icon name="hero-arrow-left" class="w-4 h-4" />
                    <span>
                      Back to {if @type == :cookbook, do: "Cookbook", else: "Documentation"}
                    </span>
                  </.link>
                  <h1 class="text-4xl font-bold text-foreground">
                    {@selected_document.title}
                  </h1>
                </div>
                <div class="text-primary">
                  <.icon name={Map.get(@selected_document, :icon, "hero-document")} class="w-8 h-8" />
                </div>
              </div>
              <p class="text-lg text-muted-foreground">
                {@selected_document.description}
              </p>
            </div>

            <%= if @document_content do %>
              <div class="prose prose-sm max-w-none text-foreground/80">
                {raw(@document_content.html)}
              </div>
            <% end %>
          </div>
        <% else %>
          <%!-- Index Page --%>
          <div class="max-w-4xl">
            <%!-- Header Section --%>
            <div class="mb-6 flex justify-between items-center">
              <h1 class="text-3xl font-bold text-foreground">
                {if @type == :cookbook, do: "Cookbook", else: "Documentation"}
              </h1>
            </div>

            <%!-- Categories/Items Grid --%>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <%= for item <- @menu_items do %>
                <div class="bg-elevated p-6 rounded-lg border border-border">
                  <h3 class="text-xl font-semibold text-foreground mb-4">
                    {item.label}
                  </h3>
                  <div class="space-y-3">
                    <%= for menu_item <- item.menu_items do %>
                      <.link navigate={menu_item.path} class="block">
                        <div class="p-4 rounded-lg hover:bg-muted transition-colors">
                          <div class="flex items-center gap-3">
                            <div class="text-primary">
                              <.icon name={menu_item.icon} class="w-6 h-6" />
                            </div>
                            <div>
                              <h4 class="text-lg font-medium text-foreground">
                                {menu_item.label}
                              </h4>
                              <%= if menu_item[:description] do %>
                                <p class="text-sm text-muted-foreground mt-1">
                                  {menu_item.description}
                                </p>
                              <% end %>
                            </div>
                          </div>
                        </div>
                      </.link>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <%!-- Side Navigation --%>
      <%= if @selected_document && @document_content.toc != [] do %>
        <div class="hidden lg:block w-64 shrink-0">
          <div id="sidebar" class="sticky top-24 space-y-4" phx-hook="ScrollSpy">
            <h3 class="text-lg font-semibold text-foreground mb-4">
              On this Page
            </h3>
            <nav class="space-y-1">
              <%= for section <- @document_content.toc do %>
                <a
                  href={"##{section.id}"}
                  class="block px-3 py-2 hover:bg-elevated rounded-lg transition-colors text-muted-foreground hover:text-foreground"
                >
                  {section.title}
                </a>
                <%= if section.children != [] do %>
                  <%= for child <- Enum.reverse(section.children) do %>
                    <a
                      href={"##{child.id}"}
                      class="block pl-6 py-1 hover:bg-elevated rounded-lg transition-colors text-muted-foreground hover:text-foreground text-sm"
                    >
                      {child.title}
                    </a>
                  <% end %>
                <% end %>
              <% end %>
            </nav>

            <div class="pt-4 border-t border-border">
              <a
                href={@selected_document.github_url}
                target="_blank"
                rel="noopener noreferrer"
                class="mt-2 w-full flex items-center gap-2 px-3 py-2 text-muted-foreground hover:text-foreground hover:bg-elevated rounded-lg transition-colors"
              >
                <.icon name="hero-pencil-square" class="w-4 h-4" />
                <span>Edit in GitHub</span>
              </a>
              <%= if @selected_document.is_livebook do %>
                <a
                  href={@selected_document.livebook_url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="mt-2 w-full flex items-center gap-2 px-3 py-2 text-muted-foreground hover:text-foreground hover:bg-elevated rounded-lg transition-colors"
                >
                  <.icon name="hero-arrow-top-right-on-square" class="w-4 h-4" /> Run in Livebook
                </a>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</.marketing_layout>
